<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph.xml"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.cbu.mobil_dersi_projesi.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_home_to_mekanDetailFragment"
            app:destination="@id/mekanDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.cbu.mobil_dersi_projesi.ui.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profile_to_mekanAddEditFragment"
            app:destination="@id/mekanAddEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.cbu.mobil_dersi_projesi.ui.login.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/register"
        android:name="com.cbu.mobil_dersi_projesi.ui.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/mekanAddEditFragment"
        android:name="com.cbu.mobil_dersi_projesi.ui.mekanAddEdit.MekanAddEditFragment"
        android:label="MekanAddEditFragment" />
    <fragment
        android:id="@+id/mekanListFragment"
        android:name="com.cbu.mobil_dersi_projesi.ui.profileTab.MekanListFragment"
        android:label="MekanListFragment" />
    <fragment
        android:id="@+id/mekanDetailFragment"
        android:name="com.cbu.mobil_dersi_projesi.ui.mekanDetail.MekanDetailFragment"
        android:label="MekanDetailFragment" />
</navigation>